{
  "maxerr"        : 10,
  "indent"        : 2,

  "maxparams"     : 3,
  "maxdepth"      : 3,
  "maxstatements" : false,
  "maxcomplexity" : false,
  "maxlen"        : false,

  "bitwise"       : false,
  "camelcase"     : false,
  "curly"         : true,
  "eqeqeq"        : false,
  "forin"         : false,
  "immed"         : false,
  "latedef"       : false,
  "newcap"        : true,
  "noarg"         : true,
  "noempty"       : true,
  "nonew"         : false,
  "plusplus"      : false,
  "quotmark"      : "single",
  "undef"         : true,
  "unused"        : true,
  "strict"        : false,

  "asi"           : true,
  "boss"          : false,
  "debug"         : false,
  "eqnull"        : true,
  "esnext"        : true,
  "evil"          : false,
  "expr"          : true,
  "funcscope"     : true,
  "globalstrict"  : true,
  "iterator"      : false,
  "lastsemic"     : true,
  "laxbreak"      : true,
  "laxcomma"      : false,
  "loopfunc"      : false,
  "multistr"      : false,
  "proto"         : false,
  "scripturl"     : false,
  "shadow"        : true,
  "sub"           : true,
  "supernew"      : true,
  "validthis"     : true,

  "browser"       : true,
  "browserify"    : true,
  "devel"         : true,
  "node"          : true,
  "nonstandard"   : true,

  "globals": {
