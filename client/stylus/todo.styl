
footerHeight = 100px

body
  margin-bottom (footerHeight + grid)

ol
  li
    display block
    input[type='text']
      padding 1px 3px
      font-size 1em
      border-bottom-width 1px
    // checked "completed" style
    input:checked + input
      text-decoration line-through
      background transparent
      border-bottom-color transparent

footer
  position fixed
  left 0
  right 0
  bottom 0
  font-size .9em
  background-color lighten(textColor, 95%)
  border-top 1px solid lighten(textColor, 90%)
  overflow none
  overflow-y scroll
  max-height footerHeight
  transition all .3s ease-out .15s
  &:hover
    border-top-color themeColor
    max-height 500px
    transition max-height .05s ease-out .3s
  h4
    margin .5em 0 0 .5em
  code
    overflow-y scroll
    line-height .5em
