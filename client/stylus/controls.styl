
label
  cursor pointer
  > input
    cursor pointer
    margin-left .25em

input[type="checkbox"]
  cursor pointer

input[type="password"], select, textarea, input[type="text"]
  text-indent 3px
  overflow hidden
  cursor pointer
  text-overflow ellipsis
  outline none
  padding 15px
  vertical-align middle
  font-size 1.25em
  color lighten(textColor, 20%)
  border 1px solid lighten(textColor, 95%)
  border-bottom 2px solid lighten(textColor, 85%)
  vertical-align middle
  outline none
  transform scale(1)
  transition-duration .3s
  transition-property transform
  transition color .1s ease-out, border .2s ease-out .15s
  &:hover
    position relative
    z-index 1
    color textColor
    border-bottom-color themeColor
    transition all 0s
  &:focus
    cursor text
    color darken(textColor, 20%)
    position relative
    z-index 10
    transition all 0s
    border-bottom-color themeColor
    transition color .5s ease-out, border .05s ease-out

.button, input[type="button"], input[type="submit"], button
  cursor pointer
  transition box-shadow .2s ease-in .05s, border .2s ease-in .05s, color .2s ease-in .05s, text-shadow .2s ease-in .05s
  opacity 1
  outline none
  white-space nowrap
  position relative
  vertical-align middle
  letter-spacing 1px
  background-color themeColor
  text-shadow 0 1px 0 lighten(textColor, 25%)
  border 1px solid lighten(textColor, 80%)
  border-top 1px solid darken(themeColor, 20%)
  border-left 1px solid darken(themeColor, 20%)
  border-right 1px solid darken(themeColor, 20%)
  border-bottom 2px solid darken(themeColor, 30%)
  color themeTextColor
  font-size 1.25em
  font-weight 500
  padding 15px 20px
  text-align center
  border-radius 3px
  transition all .4s ease-out .1s
  &:hover
    border-bottom-color darken(themeColor, 40%)
    border-right-color darken(themeColor, 30%)
    text-shadow 0 1px 0 darken(textColor, 60%)
    transform scale(1.015) translateY(-1px)
    transition none
  &:active
    text-indent 1px
    border-bottom none
    box-shadow 1px 1px 1px themeColor inset
    text-shadow 0 1px 0 lighten(textColor, 20%)
    transform translateY(1px)
    opacity .9
    transition all .01s ease-in
  &:focus
    box-shadow 0 0 3px 1px lighten(themeColor, 25%)
    text-shadow 0 1px 0 darken(textColor, 30%)
    transition none
  &:disabled
    cursor not-allowed
    border-bottom-color darken(themeColor, 10%)
    text-shadow none
    opacity .83
