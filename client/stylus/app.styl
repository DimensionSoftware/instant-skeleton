
@import 'animations.styl'


// theme variables
lightText    = lighten(textColor, 25%)
onTop        = 11
maxWidth     = 1200px

bounce = cubic-bezier(0,1.72,0,.75)

headerBackground=tint(themeColor, 96%)

body
  margin-top 0
  padding-top 0
  &:before
    content ''
    position fixed
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-image linear-gradient(#ffffff 80%, #eeeeee)
  &:after
    content ''
    position fixed
    z-index onTop + 1
    left 0
    right 0
    top 0
    border-bottom 3px solid themeColor
    box-shadow 0 0 12px 8px #fff
    opacity 0
    transition opacity .5s ease-in .1s
  &.scrolled
    &:after
      opacity 1
      transition none
    .PublicPage, .MyTodoPage
      header
        form
          .clip
            > input[type='text']
              &:hover, &:focus
                background-color headerBackground
  &.scrolled.down
    .PublicPage, .MyTodoPage
      header
        transform translateY(-(grid * 1.5))
        transition none
        form
          button
            opacity 0
          .clip
            input[type='text']
              opacity 0
              &:hover, &:focus
                opacity 1
          &:hover
            > input[type='text']
              opacity 1
              background headerBackground
            button
              opacity 1

hr
  border-top-color rgba(textColor, .015)
  margin grid * 3 auto
  width 40%

h1, h2
  margin-top grid * 2.5
  font-family Consolas,Monaco,'Andale Mono',monospace
  letter-spacing -1px

h2, h3
  margin-top grid * 4

.Page > div
  animation focusIn .03s ease-in
  backface-visibility hidden

.HomePage
  max-width 800px
  margin 0 auto 0 auto
  padding-top 30px
  h1
    text-align center

.PublicPage, .MyTodoPage
  max-width maxWidth
  margin 0 auto 0 auto
  padding 0 (grid * 1.3) (grid * 2) grid
  position relative
  h1, h2
    margin-left (grid * 7) - 1
  h2
    margin-top grid * 3.3
    margin-bottom grid * 6.5
  header
    position fixed
    left grid * 4
    right grid * 4
    z-index onTop + 1
    top grid * 7.6
    margin 0 auto 0 auto
    max-width maxWidth
    transition transform .2s ease-out
    form
      margin 0 (grid * 2.8) 0 (grid * 4.5)
      .clip
        overflow hidden
        border-right 1px solid themeColor
        input[type='text']
          padding-top 9px
          padding-bottom @padding-top
          font-size 1.1em
          border-bottom 1px solid lighten(themeColor, 35%)
          text-indent grid * 4.7
          background transparent
          background-image linear-gradient(to top, tint(themeColor, 93%), rgba(#ffffff, .85) 45px)
          opacity 1
          padding-left 9px
          margin-left 4px
          max-width maxWidth - 50px
          border-bottom-color themeColor
          transition opacity .15s ease-in
          &:hover, &:focus
            border-bottom-color themeColor
            background-image linear-gradient(to top, tint(themeColor, 88%), #ffffff 45px)
            transition none
      button
        visibility hidden
        padding 0 (grid * 2)
        font-size 1em
        height 36px
  ol
    > input
      width 200px
      position absolute
      font-weight 100
      top grid * 3.5
      right grid * 2.7
      font-size 1.1em
      padding 2px 10px
      background-color tint(themeColor, 98%)
      border-radius 30px
      border 1px solid tint(themeColor, 85%)
      border-bottom-width 2px
      z-index 1
      color lighten(textColor, 50%)
      &:focus, &:hover
        color lighten(textColor, 40%)
        border-color tint(themeColor, 60%)
      &:focus
        width 230px
        border-color tint(themeColor, 50%)
        transition width .03s ease-in

.HomePage, .MyTodoPage, .PublicPage
  overflow hidden
  min-height grid * 30
  margin-bottom grid * 12
  // inputs for adding a todo
  form
    position relative
    input[type='text']
      width 100%
      border-bottom-width 2px
    button
      position absolute
      z-index onTop
      right 0
      top 0
    small
      position absolute
      bottom grid * 1.5
      right 115px
      font-size .85em
      color darken(themeColor, 30%)
      z-index onTop
  // this is the todo list
  ol
    min-height grid * 30
    padding-bottom grid * 5
    margin-top 0
    margin-bottom (grid / 2)
    position relative
    overflow hidden
    borderColor = #eee
    border-bottom 2px solid borderColor
    box-shadow 0 1px 5px -1px borderColor
    // two lines simulating 8x11 paper
    &:after
      position absolute
      z-index onTop
      top 0
      left grid * 2
      bottom 0
      content ''
      width 3px
      height 100%
      border-left 1px solid tint(themeColor, 80%)
      border-right 1px solid tint(themeColor, 80%)
    &:before
      position absolute
      z-index onTop
      top 0
      right 0
      bottom 0
      content ''
      width 1px
      height 100%
      background-color borderColor
    // todo list iem
    li
      position relative
      display block
      max-width 100%
      animation openSpace .25s bounce forwards, fallInX .35s bounce both
      animation-delay .035s
      backface-visibility hidden
      span
        position absolute
        top 2px
        background rgba(255,255,255,.85)
        padding 0 6px
        right grid * 5.5
        font-weight 200
        font-size .8em
        font-style italic
        color lighten(textColor, 30%)
        z-index onTop
        max-width 200px
        overflow ellipsis
      .placeholder
        margin (grid * 1.5) 0
        text-indent grid * 7
      input[type='checkbox']
        position absolute
        left grid
        top grid
        z-index onTop
      input[type='text']
        padding 5px 9px
        font-size 1em
        text-indent grid * 6
        background none
        border none
        width 100%
        & + .fx
          border-bottom 1px solid transparent
        &:hover + .fx
          border-bottom 1px solid rgba(themeColor, .2)
        &:focus + .fx, &:hover + .fx
          border-bottom 1px solid rgba(themeColor, .8)
          margin-right grid * 2
        &:hover, &:focus
          ~ .delete
            display block
        &:focus
          box-shadow none
          ~ .delete
            display block
      .name
        position absolute
        top 0
        height 2em
        font-size .7em
        font-weight 200
        color lighten(textColor, 30%)
        text-transform capitalize
        z-index onTop
        right grid * 3
        max-width grid * 6
        overflow hidden
        text-overflow ellipsis
      .delete
        position absolute
        display none
        cursor pointer
        right grid * 3
        font-weight bold
        font-size 1.3em
        top 1px
        color themeColor
        z-index onTop
        transform scale(1)
        transition all .15s ease-out
        &:hover
          display block
          transform scale(1.4)
          transition none
      // checked "completed" style
      input:checked + input
        text-decoration line-through
        border-bottom-color transparent
        color tint(darken(themeColor, 80%), 50%)
    // action buttons for "all", "active" & "completed"
    .actions
      text-align center
      position fixed
      z-index onTop + 2
      bottom 0
      left 50%
      font-size 1.1em
      margin-left -202px
      padding 0 (grid * 4.5)
      background-color rgba(#fff, .95)
      animation fadeIn .6s ease-in
      backface-visibility hidden
      a
        position relative
        padding (grid * 1.5) 0 grid 0
        margin 0 (grid * 2)
        min-width 40px
        &.active
          //text-transform uppercase
          box-shadow inset 0 -3px 0 tint(themeColor, 40%)
          font-weight bold
          border-bottom-color themeColor
          transform scale(1.08)
          transition transform .2s ease-in

  // "next" link
  > a
    position absolute
    margin-top -36px
    right (grid * 4.2)
    font-size .8em
    text-transform capitalize

  footer
    position relative
    text-align center
    .last-visited
      font-size .9em
      a
        font-size @font-size
