
@import 'animations.styl'


// theme variables
lightText    = lighten(textColor, 25%)
onTop        = 11
maxWidth     = 1200px

bounce = cubic-bezier(0,1.72,0,.75)

headerBackground=tint(themeColor, 96%)

body
  margin-top 0
  padding-top 0
  &:before
    content ''
    position fixed
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-image linear-gradient(#ffffff 80%, #eeeeee)
  &:after
    content ''
    position fixed
    z-index onTop + 1
    left 0
    right 0
    top 0
    border-bottom 3px solid themeColor
    box-shadow 0 0 12px 8px #fff
    opacity 0
    transition opacity .5s ease-in
  &.scrolled
    &:after
      opacity 1
      transition none
    .PublicPage, .MyTodoPage
      header
        form
          .clip
            > input[type='text']
              &:hover, &:focus
                background-color headerBackground
  &.scrolled.down
    .PublicPage, .MyTodoPage
      header
        transform translateY(-(grid * 1.5))
        transition none
        form
          button
            opacity 0
          .clip
            input[type='text']
              opacity 0
              &:hover, &:focus
                opacity 1
          &:hover
            > input[type='text']
              opacity 1
              background headerBackground
            button
              opacity 1

hr
  border-top-color rgba(textColor, .015)
  margin grid * 3 auto
  width 40%

h1, h2
  font-family Consolas,Monaco,'Andale Mono',monospace
  letter-spacing -1px

h2, h3
  margin-top grid * 4

.Page > div
  animation focusIn .03s ease-in

.HomePage
  max-width 800px
  margin 30px auto 0 auto
  h1
    text-align center

.PublicPage, .MyTodoPage
  max-width maxWidth
  margin 0 auto 0 auto
  padding 0 (grid * 1.3) (grid * 2)
  position relative
  h1, h2
    margin-left (grid * 7) - 1
  h2
    margin-top grid * 3.3
    margin-bottom grid * 6.2
  header
    position fixed
    left grid * 4
    right grid * 4
    z-index onTop + 1
    top grid * 7.3
    margin 0 auto 0 auto
    max-width maxWidth
    transition transform .2s ease-out
    form
      margin 0 (grid * 2.8) 0 (grid * 9.4)
      .clip
        overflow hidden
        input[type='text']
          padding-top 5px
          padding-bottom @padding-top
          font-style italic
          font-size 1.1em
          border-bottom 1px solid lighten(themeColor, 35%)
          background transparent
          background-image linear-gradient(to top, tint(themeColor, 80%), rgba(headerBackground, .85) 2px)
          opacity 1
          text-indent 0
          padding-left 9px
          margin-left 7px
          max-width maxWidth - 50px
          border-bottom-color darken(themeColor, 18%)
          transition opacity .15s ease-in
          &:hover, &:focus
            border-bottom-color themeColor
            background-image linear-gradient(to top, tint(themeColor, 70%), rgba(headerBackground, .95) 2px)
            transition none
      button
        visibility hidden
        padding 0 (grid * 2)
        font-size 1em
        height 36px
  ol
    > input
      position absolute
      font-weight 100
      top grid * 3.5
      right grid * 2.7
      font-size 1em
      padding 2px 10px
      border 1px solid #f0f0f0
      border-radius 30px
      z-index 1
      color lighten(textColor, 50%)
      &:focus, &:hover
        color lighten(textColor, 40%)
        border 1px solid #eee

.HomePage, .MyTodoPage, .PublicPage
  overflow hidden
  form
    position relative
    input[type='text']
      width 100%
      border-bottom-width 2px
    button
      position absolute
      z-index onTop
      right 0
      top 0
    small
      position absolute
      bottom grid * 1.5
      right 115px
      font-size .85em
      color darken(themeColor, 30%)
      z-index onTop
  ol
    min-height 400px
    padding-bottom grid * 5
    margin-top 0
    margin-bottom (grid / 2)
    position relative
    overflow hidden
    borderColor = #eee
    border 1px solid borderColor
    border-right 1px solid darken(borderColor, 12%)
    border-top none
    border-bottom 2px solid darken(borderColor, 7%)
    box-shadow 0 2px 2px -1px tint(themeColor, 60%), 0 2px 20px -1px borderColor, 0 30px 37px -35px darken(borderColor, 5%)
    // two red lines simulating 8x11 paper
    &:after
      position absolute
      z-index onTop
      opacity .25
      top 0
      left grid * 3.5
      content ''
      width 3px
      height 100%
      border-left 1px solid red
      border-right 1px solid red
    li
      position relative
      display block
      max-width 100%
      animation openSpace .25s bounce forwards, fallInX .35s bounce both
      animation-delay .035s
      span
        position absolute
        top 2px
        background rgba(255,255,255,.85)
        padding 0 6px
        right grid * 5.5
        font-weight 200
        font-size .85em
        z-index onTop
        max-width 150px
        overflow ellipsis
      .placeholder
        text-indent grid * 7
      input[type='checkbox']
        position absolute
        left grid
        top grid
        z-index onTop
      input[type='text']
        padding 5px 9px
        font-size 1em
        text-indent grid * 6
        background none
        border none
        width 100%
        & + .fx
          border-bottom 1px solid transparent
        &:hover + .fx
          border-bottom 1px solid rgba(themeColor, .15)
        &:focus + .fx, &:focus:hover + .fx
          border-bottom 1px solid rgba(themeColor, .6)
        &:hover, &:focus
          ~ .delete
            display block
        &:focus
          box-shadow none
          ~ .delete
            display block
      .name
        position absolute
        top 0
        height 2em
        font-size .7em
        font-weight 200
        color lighten(textColor, 30%)
        text-transform capitalize
        z-index onTop
        right grid * 3
        max-width grid * 6
        overflow hidden
        text-overflow ellipsis
      .delete
        position absolute
        display none
        cursor pointer
        right grid * 3
        font-weight bold
        font-size 1.3em
        top 1px
        color themeColor
        z-index onTop
        transform scale(1)
        transition all .15s ease-out
        &:hover
          display block
          transform scale(1.4)
          transition none
      // checked "completed" style
      input:checked + input
        text-decoration line-through
        border-bottom-color transparent
    .actions
      position absolute
      z-index onTop
      bottom 0
      font-size .8em
      margin (grid * 1.5) 0 0 (grid * 7)
      a
        margin-right grid * 2
        &.active
          text-transform uppercase
  > a
    position absolute
    margin-top -36px
    right (grid * 4.2)
    font-size .8em
    text-transform capitalize
  footer
    min-height 69px
    text-align center
    margin-top grid * 7
    .navigation
      animation fadeIn .6s ease-in
      position fixed
      z-index onTop
      bottom grid
      right grid * 1.5
      text-align right
      padding 2px 15px
      color lighten(textColor, 50%)
      background rgba(#fff, .7)
      border 1px solid #fff
      font-size .75em
      > small
        text-transform capitalize
    .last-visited
      font-size .9em
      a
        font-size @font-size
