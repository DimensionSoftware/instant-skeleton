
@import 'animations.styl'


// theme variables
lightText    = lighten(textColor, 25%)
onTop        = 11
maxWidth     = 1200px

bounce = cubic-bezier(0,1.72,0,.75)

headerBackground=tint(themeColor, 96%)

body
  &:before
    content ''
    position fixed
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-image linear-gradient(#ffffff 80%, #eeeeee)
  &.scrolled
    &:after
      content ''
      position fixed
      top 0
      right 0
      left 0
      box-shadow 0 0 12px 8px rgba(themeColor, .1)
    .PublicPage, .MyTodoPage
      header
        form
          margin 0 0 0 93px
          button
            padding-top 8px
            padding-bottom @padding-top
            font-size 1.1em
            height 47px
          .clip
            > input[type='text']
              padding-top 8px
              padding-bottom @padding-top
              background-image linear-gradient(to top, tint(themeColor, 70%), rgba(headerBackground, .85) 6px)
              border-left 1px solid lighten(themeColor, 40%)
              border-top 1px solid lighten(themeColor, 70%)
              &:hover, &:focus
                background-color headerBackground
  &.scrolled.down
    .PublicPage, .MyTodoPage
      header
        transform translateY(-(grid * 1.5))
        transition none
        form
          button
            opacity 0
          .clip
            > input[type='text']
              opacity 0
              &:hover, &:focus
                opacity 1
          &:hover
            > input[type='text']
              opacity 1
              background headerBackground
            button
              opacity 1

hr
  border-top-color rgba(textColor, .015)
  margin grid * 3 auto
  width 40%

h1, h2
  font-family Consolas,Monaco,'Andale Mono',monospace
  letter-spacing -1px

h2, h3
  margin-top grid * 4

.Page > div
  animation focusIn .11s ease-in

.HomePage
  max-width 800px
  margin 30px auto 0 auto
  h1
    text-align center

.PublicPage, .MyTodoPage
  max-width maxWidth
  margin 0 auto 0 auto
  padding (grid * 4) (grid * 1.3)
  position relative
  h1, h2
    margin-left (grid * 7) - 1
  header
    position fixed
    left grid * 4
    right grid * 4
    z-index onTop + 1
    top grid * 3.1
    margin 0 auto 0 auto
    max-width maxWidth
    transition transform .2s ease-out
    form
      margin 0 65px 0 93px
      .clip
        overflow hidden
        border-right 1px solid themeColor
        input[type='text']
          font-style italic
          background transparent
          background-image linear-gradient(to top, tint(themeColor, 80%), rgba(headerBackground, .85) 6px)
          opacity 1
          height 29px
          text-indent 0
          max-width maxWidth - 50px
          border-bottom-color darken(themeColor, 18%)
          transition opacity .15s ease-in
          &:hover, &:focus
            border-bottom-color themeColor
            background-image linear-gradient(to top, tint(themeColor, 75%), rgba(headerBackground, .95) 6px)
            transition none

.HomePage, .MyTodoPage, .PublicPage
  overflow hidden
  form
    position relative
    input[type='text']
      width 100%
      border-bottom-width 2px
    button
      position absolute
      z-index onTop
      right 0
      top 0
    small
      position absolute
      bottom grid * 1.5
      right 115px
      font-size .85em
      color darken(themeColor, 30%)
      z-index onTop
  ol
    background backgroundColor
    margin-top grid * 4
    margin-bottom (grid / 2)
    position relative
    overflow hidden
    borderColor = #eee
    border 1px solid borderColor
    border-right 1px solid darken(borderColor, 12%)
    border-top 1px solid lighten(borderColor, 10%)
    border-bottom 2px solid darken(borderColor, 7%)
    box-shadow 0 2px 2px -1px tint(themeColor, 60%), 0 2px 20px -1px borderColor, 0 30px 37px -35px darken(borderColor, 5%)
    // two red lines simulating 8x11 paper
    &:after
      position absolute
      z-index onTop
      opacity .25
      top 0
      left grid * 3.5
      content ''
      width 3px
      height 100%
      border-left 1px solid red
      border-right 1px solid red
    li
      position relative
      display block
      max-width 100%
      animation openSpace .25s bounce forwards, fallInX .35s bounce both
      animation-delay .13s
      > div
        margin-left grid * 7
      span
        position absolute
        top 2px
        background #fff
        padding 2px 6px
        right grid * 6.5
        font-weight 200
        font-size .85em
        z-index onTop
        max-width 150px
        overflow ellipsis
      input[type='checkbox']
        position absolute
        left grid
        top grid
        z-index onTop
      input[type='text']
        padding 5px 9px
        font-size 1em
        text-indent grid * 6
        border-bottom 1px solid lighten(textColor, 95%)
        width 100%
        &:hover
          border-bottom 1px solid lighten(themeColor, 75%)
          border-right 1px solid themeColor
          box-shadow -1px 0 3px -2px themeColor
          ~ .delete
            display block
        &:focus
          border-bottom 1px solid lighten(themeColor, 20%)
          ~ .delete
            display block
      .name
        position absolute
        top 0
        height 2em
        font-size .7em
        font-weight 200
        color lighten(textColor, 30%)
        text-transform capitalize
        z-index onTop
        right grid * 3
        max-width grid * 6
        overflow hidden
        text-overflow ellipsis
      .delete
        position absolute
        display none
        cursor pointer
        right grid * 2
        font-weight bold
        font-size 1.3em
        top 1px
        color themeColor
        z-index onTop
        transform scale(1)
        transition all .15s ease-out
        &:hover
          display block
          transform scale(1.4)
          transition none
      // checked "completed" style
      input:checked + input
        text-decoration line-through
        border-bottom-color transparent
    .actions
      font-size .8em
      margin (grid * 1.5) 0 0 (grid * 7)
      a
        margin-right grid * 2
        &.active
          text-transform uppercase
  > a
    position absolute
    margin-top -36px
    right (grid * 8.5)
    font-size .8em
    text-transform capitalize
  footer
    min-height 69px
    text-align center
    margin-top grid * 5
    > a
      border none

    .navigation
      position fixed
      z-index onTop
      bottom grid
      right grid * 1.5
      text-align right
      padding 2px 15px
      color lighten(textColor, 50%)
      background rgba(#fff, .7)
      font-size .75em
      > small
        text-transform capitalize
    .last-visited
      font-size .9em
      a
        font-size @font-size
