
@import 'animations.styl'


// theme variables
lightText    = lighten(textColor, 25%)
onTop        = 11
maxWidth     = 1200px

bounce = cubic-bezier(0,1.72,0,.75)

headerBackground = tint(themeColor, 96%)
leftNavWidth     = 125px

body
  margin-top 0
  padding-top 0
  &:before
    background url('http://wallpoper.com/images/00/22/27/48/dark-forest_00222748.jpg') no-repeat center center fixed
    background-size cover
    animation-name fallInX
    animation-duration 2.5s
    content ''
    position fixed
    right 0
    top 0
    z-index -1
    bottom 0
    left 0
  &:after
    content ''
    position fixed
    z-index onTop + 1
    left 0
    right 0
    top 0
    border-bottom 1px solid themeColor
    transition box-shadow .5s ease-in .1s
  &.scrolled
    &:after
      box-shadow 0 0 12px 8px #fff
      border-bottom-width 2px
      transition none
    .PublicPage, .MyTodoPage
      header
        form
          .clip
            > input[type='text']
              &:hover, &:focus
                background-color headerBackground
  &.scrolled.down
    .PublicPage, .MyTodoPage
      header
        transform translateY(-(grid * 1.5))
        transition none
        form
          button
            opacity 0
          .clip
            input[type='text']
              opacity 0
              &:hover, &:focus
                opacity 1
          &:hover
            > input[type='text']
              opacity 1
              background headerBackground
            button
              opacity 1
  .react
    &:before
      content ''
      position fixed
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-image linear-gradient(rgba(255,255,255,.95) 60%, rgba(225,225,225,.7))

hr
  border-top-color rgba(textColor, .015)
  margin grid * 3 auto
  width 40%

h1, h2
  margin-top grid * 2.5

h2, h3
  margin-top grid * 4

.Page
  padding-bottom grid * 30
  margin-left leftNavWidth + (grid * 2)
  > div
    animation focusIn .03s ease-in
    backface-visibility hidden

.HomePage
  max-width 800px
  margin 0 auto 0 auto
  padding-top 30px
  h1
    text-align center

.PublicPage, .MyTodoPage
  max-width maxWidth
  margin 0 auto 0 auto
  padding 0 (grid * 1.3) (grid * 2) grid
  position relative
  h1, h2
    margin-left (grid * 7) - 1
  h2
    margin-top grid * 3.3
    margin-bottom grid * 6.5
    text-overflow ellipsis
    overflow hidden
  // count
  h4
    position absolute
    left grid * 7
    top grid * 3.4
    border-radius 100%
    font-size .85em
    color lighten(textColor, 20%)
    background-color rgba(backgroundColor, .8)
    padding (grid / 2)
    animation-name fallInX
    animation-duration .35s
    animation-timing-function ease-in-out
  header
    position fixed
    left 22.2 * grid
    right 0
    z-index onTop + 1
    top grid * 7.6
    margin 0 auto
    max-width maxWidth
    transition transform .2s ease-out
    form
      margin 0 (grid * 4) 0 0
      .clip
        overflow hidden
        input[type='text']
          padding-top 12px
          padding-bottom @padding-top
          font-size 1.1em
          border-left 1px solid lighten(textColor, 90%)
          border-bottom 2px solid lighten(textColor, 65%)
          text-indent grid * 4.7
          opacity 1
          padding-left 13px
          margin-left 4px
          max-width maxWidth - 50px
          transition opacity .15s ease-in
          &:focus
            border-bottom-color themeColor
      button
        visibility hidden
        padding 0 (grid * 2)
        font-size 1em
        height 36px
  // search
  ol
    > input
      width 200px
      position absolute
      font-weight 100
      top grid * 3.5
      right 0
      font-size .8em
      font-style italic
      padding 4px 15px
      border-radius 30px
      border 1px solid tint(textColor, 85%)
      z-index 1
      color lighten(textColor, 50%)
      transition width .25s bounce
      &:focus, &:hover
        color lighten(textColor, 25%)
      &:focus
        width 230px
        transition none

.HomePage, .MyTodoPage, .PublicPage
  overflow hidden
  min-height grid * 30
  margin-bottom grid * 12
  // inputs for adding a todo
  form
    position relative
    input[type='text']
      width 100%
      border-bottom-width 2px
    button
      position absolute
      z-index onTop
      right 0
      top 0
    small
      position absolute
      bottom grid * 1.5
      right 115px
      font-size .85em
      color darken(themeColor, 30%)
      z-index onTop
  // this is the todo list
  ol
    min-height grid * 30
    padding-bottom grid * 5
    margin 0 0 (grid / 2) 0
    position relative
    overflow hidden
    border-bottom 1px solid #eee
    // two lines simulating 8x11 paper
    &:after
      position absolute
      z-index onTop
      top 0
      left grid * 2
      bottom 0
      content ''
      width 3px
      height 90%
      border-left 1px solid tint(textColor, 90%)
      border-right 1px solid tint(textColor, 90%)
    &:before
      position absolute
      z-index onTop
      top 0
      right 0
      bottom 0
      content ''
      width 1px
      background-color borderColor
    // todo list iem
    li
      position relative
      display block
      max-width 100%
      animation openSpace .25s ease-out forwards, fallInX .35s bounce both
      animation-delay .035s
      backface-visibility hidden
      margin-left 10px
      span
        position absolute
        top 2px
        background rgba(255,255,255,.45)
        border-radius 3px
        padding 0 6px
        right grid * 5.5
        font-weight 200
        font-size .75em
        font-style italic
        color lighten(textColor, 30%)
        z-index onTop
        max-width 250px
        overflow ellipsis
      .placeholder
        margin (grid * 1.5) 0
        text-indent grid * 6
      input[type='checkbox']
        position absolute
        left grid
        top grid
        z-index onTop
      input[type='text']
        padding 5px 9px
        font-size 1em
        text-indent grid * 5
        background none
        border none
        width 100%
        & + .fx
          border-bottom 1px solid transparent
          transition all .35s ease-out .2s
        &:focus + .fx, &:focus:hover + .fx
          border-bottom 1px solid rgba(themeColor, .8)
          margin-right grid / 2
        &:hover + .fx
          border-bottom 1px solid rgba(themeColor, .2)
          transition none
        &:hover, &:focus
          ~ .delete
            display block
        &:focus
          box-shadow none
          ~ .delete
            display block
      .name
        position absolute
        top 0
        height 2em
        font-size .7em
        font-weight 200
        color lighten(textColor, 30%)
        text-transform capitalize
        z-index onTop
        right grid * 3
        max-width grid * 6
        overflow hidden
        text-overflow ellipsis
      .delete
        position absolute
        display none
        cursor pointer
        right grid
        font-weight bold
        font-size 1.3em
        top 1px
        color themeColor
        z-index onTop
        transform scale(1)
        transition all .15s ease-out
        &:hover
          display block
          transform scale(1.4)
          transition none
      // checked "completed" style
      input:checked + input
        text-decoration line-through
        border-bottom-color transparent
        color tint(darken(themeColor, 80%), 50%)
    // action buttons for "all", "active" & "completed"
    .actions
      text-align center
      position fixed
      z-index onTop + 2
      bottom 0
      left 50%
      font-size 1.1em
      margin-left -133px
      padding 0 (grid * 4.5)
      border-radius 3px
      border-bottom-right-radius 0
      border-bottom-left-radius 0
      border-bottom 2px solid #000
      background-color rgba(#fff, .08)
      animation fadeIn .8s ease-in
      backface-visibility hidden
      a
        position relative
        padding (grid * 1.5) 0 grid 0
        border-bottom 8px solid transparent
        margin 0 (grid * 2)
        min-width 40px
        fadeOut(40%)
        transition all .2s ease-in .01s
        text-transform lowercase
        &:hover
          transition none
        &.active
          text-transform capitalize
          fadeOut(0)
          font-weight bold
          border-bottom-color darken(themeColor, 10%)
          transform scale(1.08)
          transition none

  // "next" link
  > a
    position absolute
    margin-top -36px
    right (grid * 2.2)
    font-size .8em
    text-transform capitalize

  footer
    position relative
    text-align center
    .last-visited
      font-size .9em
      a
        font-size @font-size
