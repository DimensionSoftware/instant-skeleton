
@import 'animations.styl'


// theme variables
footerHeight = 40px
lightText    = lighten(textColor, 25%)
onTop        = 11
maxWidth     = 1200px

bounce = cubic-bezier(0,1.72,0,.75)

body
  &:before
    content ''
    position fixed
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-image linear-gradient(#ffffff 80%, #eeeeee)
  &.scrolled
    &:after
      content ''
      position fixed
      top 0
      right 0
      left 0
      box-shadow 0 0 15px 10px #fff
    header
      transform translateY(-(grid * 2.5))
      transition none
    form
      .clip
        input[type='text']
          opacity .1!important
          &:hover, &:focus
            opacity 1!important
      &:hover
        input[type='text']
          opacity 1!important

hr
  border-top-color rgba(textColor, .015)
  margin grid * 3 auto
  width 40%

h1, h2
  font-family Consolas,Monaco,'Andale Mono',monospace
  letter-spacing -1px

h2, h3
  margin-top grid * 4

.HomePage
  max-width 800px
  margin 30px auto 0 auto
  h1
    text-align center

.TodoPage
  max-width maxWidth
  margin grid auto 0 auto
  padding grid * 4
  position relative
  h1, h2
    margin-left (grid * 7) - 1
  header
    position fixed
    left grid * 4
    right grid * 4
    z-index onTop + 1
    top 0
    margin grid * 2 auto 0 auto
    max-width maxWidth
    transition transform .2s ease-out
    form
      margin 0 0 0 85px
      .clip
        overflow hidden
        input[type='text']
          opacity 1
          height 29px
          border-top none
          max-width maxWidth - 50px
          background-image linear-gradient(to top, #fff, tint(themeColor, 98%) 3px)
          text-indent grid
          border-bottom-color darken(themeColor, 15%)
          transition opacity .15s ease-in
          &:hover, &:focus
            border-bottom-color themeColor
            transition none

.HomePage, .TodoPage
  overflow hidden
  form
    position relative
    input[type='text']
      width 100%
      border-bottom-width 2px
    button
      position absolute
      z-index onTop
      right 0
      top 0
    small
      position absolute
      bottom grid * 1.5
      right 115px
      font-size .85em
      color darken(themeColor, 30%)
      z-index onTop
  ol
    background backgroundColor
    margin-top grid * 4
    position relative
    overflow hidden
    borderColor = #eee
    border 1px solid borderColor
    border-right 1px solid darken(borderColor, 12%)
    border-top 1px solid lighten(borderColor, 10%)
    border-bottom 2px solid darken(borderColor, 5%)
    box-shadow 0 2px 20px -1px borderColor, 0 30px 37px -35px darken(borderColor, 5%)
    // two red lines simulating 8x11 paper
    &:after
      position absolute
      z-index onTop
      opacity .25
      top 0
      left grid * 3.5
      content ''
      width 3px
      height 100%
      border-left 1px solid red
      border-right 1px solid red
    li
      position relative
      display block
      max-width 100%
      animation openSpace 250ms bounce forwards, fallInX 250ms bounce both
      > div
        margin-left grid * 7
      span
        position absolute
        top 4px
        right grid * 6.5
        font-weight 200
        font-size .85em
        z-index 1
        max-width 150px
        overflow ellipsis
      input[type='checkbox']
        position absolute
        left grid
        top grid
        z-index onTop
      input[type='text']
        padding 5px 9px
        font-size 1em
        text-indent grid * 6
        border-bottom 1px solid lighten(textColor, 95%)
        width 100%
        &:hover
          border-bottom 1px solid lighten(themeColor, 75%)
          border-right 1px solid themeColor
          box-shadow -1px 0 3px -2px themeColor
          ~ .delete
            display block
        &:focus
          border-bottom 1px solid lighten(themeColor, 20%)
          ~ .delete
            display block
      .name
        position absolute
        height 2em
        font-size .7em
        font-weight 200
        color lighten(textColor, 30%)
        text-transform capitalize
        z-index onTop
        top 2px
        right grid * 4
        max-width grid * 6
        overflow hidden
        text-overflow ellipsis
      .delete
        position absolute
        display none
        cursor pointer
        right grid * 3
        font-weight bold
        font-size 1.3em
        top 0
        color themeColor
        z-index onTop
        transform scale(1)
        transition all .15s ease-out
        &:hover
          display block
          transform scale(1.4)
          transition none
      // checked "completed" style
      input:checked + input
        text-decoration line-through
        border-bottom-color transparent
    .actions
      font-size .8em
      margin (grid * 1.5) 0 0 (grid * 7)
      a
        margin-right grid * 2
        &.active
          text-transform uppercase

  footer
    text-align center
    margin-top grid * 6
    > a
      border none

    .navigation
      position fixed
      z-index onTop
      bottom grid
      right grid * 1.5
      text-align right
      padding 2px 15px
      border 1px solid darken(bodyColor, 5%)
      color lighten(textColor, 50%)
      background rgba(#fff, .2)
      border-radius 3px
      font-size .85em
    .last-visited
      font-size .9em
      a
        font-size @font-size
