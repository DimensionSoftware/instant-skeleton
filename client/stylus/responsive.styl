
@media all and (max-width: 768px)
  body
    font-size .8em
    padding 0
    margin 0
    h1
      font-size 1.8em
    img
      transform scale(.65)
    .PublicPage, .MyTodoPage
      padding-left 0
      padding-right @padding-left
      overflow hidden
      h2
        margin-left grid * 5
      header
        left 0
        right 0
        top (grid * 6.4)
        form
          margin 0
          .clip
            input[type='text']
              height 22px
          button
            height 33px
            padding-left grid
            padding-right grid
      ol
        padding 0 0 (grid * 5) 0
        > input
          right grid
          max-width grid * 7
        li
          input[type='text']
            text-indent grid * 4.5
          span
            right (grid * 2)
            max-width grid * 9
        + a
          right grid * 1.5
      .actions
        margin auto
        left 0
        right 0
      footer
        margin-top (grid * 4)
        .navigation
          text-align left
          position relative
          margin 0 0 (grid * 9) (grid * 8)
          font-size 1.2em

    .HomePage
      form
        margin-left grid * 4
        margin-right @margin-left
        overflow hidden

    .dimension
      .fb-like, .ribbon
        display none!important
