
@media all and (max-width: 320px)
  body
    zoom .88

@media all and (max-width: 768px)
  body
    font-size .95em
    padding 0
    margin 0
    &.scrolled
      .PublicPage, .MyTodoPage
        header
          form
            margin (grid / 2) grid 0 (grid * 5.4)
            button
              height 41px

    .PublicPage, .MyTodoPage
      padding-left 0
      padding-right @padding-left
      header
        left 0
        right 0
        top (grid * 1.1)
        form
          margin 0 grid 0 (grid * 5.8)
          .clip
            input[type='text']
              height 22px
        button
          padding-left grid
          padding-right grid
      ol
        padding 0
        li
          span
            right (grid * 2)
        + a
          right grid * 1.5
      .actions
        margin (grid * 1.5) 0 (grid / 2) (grid * 7)
      footer
        margin-top (grid * 4)
        .navigation
          text-align left
          position relative
          margin 0 0 (grid * 4) (grid * 7)
          max-width 100px

    .HomePage
      form
        margin-left grid * 4
        margin-right @margin-left
        overflow hidden
